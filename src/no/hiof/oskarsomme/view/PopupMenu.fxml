<AnchorPane prefHeight="364.0" prefWidth="466.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="no.hiof.oskarsomme.controller.FilmEditController">
   <children>
      <Label fx:id="editHeader" alignment="CENTER" layoutX="18.0" layoutY="40.0" prefHeight="32.0" prefWidth="430.0" text="Edit film properties" textFill="WHITE" AnchorPane.bottomAnchor="288.0" AnchorPane.leftAnchor="18.0" AnchorPane.rightAnchor="18.0" AnchorPane.topAnchor="40.0">
         <font>
            <Font size="26.0" />
         </font>
      </Label>
      <ButtonBar layoutX="248.0" layoutY="291.0" prefHeight="40.0" prefWidth="200.0">
        <buttons>
          <Button mnemonicParsing="false" onAction="#ok" styleClass="btn" text="OK" textFill="WHITE" />
            <Button mnemonicParsing="false" onAction="#cancel" styleClass="btn" text="Cancel" textFill="WHITE" />
        </buttons>
      </ButtonBar>
      <GridPane layoutY="101.0" prefHeight="165.0" prefWidth="466.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <columnConstraints>
          <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label alignment="CENTER" prefHeight="17.0" prefWidth="343.0" text="Title:" textFill="WHITE" />
            <Label alignment="CENTER" prefHeight="17.0" prefWidth="396.0" text="Runtime:" textFill="WHITE" GridPane.rowIndex="1" />
            <Label alignment="CENTER" prefHeight="17.0" prefWidth="423.0" text="Description:" textFill="WHITE" GridPane.rowIndex="2" />
            <Label alignment="CENTER" prefHeight="17.0" prefWidth="395.0" text="Releasedate:" textFill="WHITE" GridPane.rowIndex="3" />
            <TextField fx:id="inputTitle" promptText="Title of movie" styleClass="inputField" GridPane.columnIndex="1" GridPane.rowIndex="0">
               <tooltip>
                  <Tooltip fx:id="titleTooltip" text="Title must be greater than 0 characters and less than 60 characters" />
               </tooltip></TextField>
            <TextField fx:id="inputRuntime" promptText="Runtime" styleClass="inputField" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <tooltip>
                  <Tooltip fx:id="runtimeTooltip" text="Must be a number between 1 and 999" />
               </tooltip></TextField>
            <TextField fx:id="inputDescription" promptText="Description" styleClass="inputField" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <tooltip>
                  <Tooltip fx:id="descriptionTooltip" text="Description must be greater than 0 characters and less than 300 characters" />
               </tooltip></TextField>
            <HBox alignment="CENTER" prefWidth="200.0" spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
               <children>
                  <TextField fx:id="inputDay" alignment="TOP_LEFT" prefHeight="25.0" promptText="DD" styleClass="inputField">
                     <tooltip>
                        <Tooltip fx:id="dayTooltip" text="Must be a number from 1 to 28/31" />
                     </tooltip></TextField>
                  <TextField fx:id="inputMonth" prefHeight="25.0" promptText="MM" styleClass="inputField">
                     <tooltip>
                        <Tooltip fx:id="monthTooltip" text="Must be a number from 1 to 12" />
                     </tooltip></TextField>
                  <TextField fx:id="inputYear" prefHeight="21.0" promptText="YYYY" styleClass="inputField">
                     <tooltip>
                        <Tooltip fx:id="yearTooltip" text="Placeholder" />
                     </tooltip></TextField>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets right="20.0" />
         </padding>
      </GridPane>
   </children>
    <stylesheets>
        <URL value="@popupmenu.css" />
    </stylesheets>
</AnchorPane>
